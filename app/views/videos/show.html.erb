<h1><%= @prods.count %> Prods Disponible !</h1>


    <article>
        <h2><%= @video.title %></h2>
    	<%= image_tag @video.image.url(:medium), alt: @video.title %>
        <p><%= @video.descrition %></p>
           <audio src="<%= :mp3s %>" controls></audio>
      
        <hr>
        
        <section>
            <% if @video.prods.empty? %>
            <p>Aucune prod disponible.</p>
            <% else %>
                <%= @video.prods.each do |prod| %>
                <h3><%= prod.title %></h3>
                <p><%= prod.description %></p>
                <% end %>
            <% end %>
        </section>
    </article>
	